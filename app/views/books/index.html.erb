<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :text %>

  <%= f.submit 'Create Book' %>

<% end %>